    <ImageView fitHeight="45.0" fitWidth="639.0" layoutX="208.0" layoutY="560.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
        <image>
            <Image url="@resources/icons/company_logo.png" />
        </image>
    </ImageView>

    <columnConstraints>
      <ColumnConstraints halignment="CENTER" maxWidth="30.0" percentWidth="5.0" />
      <ColumnConstraints halignment="CENTER" percentWidth="90.0" />
      <ColumnConstraints halignment="CENTER" maxWidth="30.0" percentWidth="5.0" />
   </columnConstraints>

   <rowConstraints>
      <RowConstraints percentHeight="5.0" valignment="CENTER" />
      <RowConstraints percentHeight="90.0" valignment="CENTER" />
      <RowConstraints />
